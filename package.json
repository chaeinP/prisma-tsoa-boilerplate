{
  "name": "server",
  "version": "1.0.0",
  "description": "codeit-slidtodo",
  "main": "dist/src/index.js",
  "scripts": {
    "test": ". ./env.local.sh && prisma generate && tsoa spec-and-routes && jest",
    "coverage": "jest --coverage",
    "routes": "tsoa spec-and-routes",
    "compile": "tsc -p ./tsconfig.json && tsc-alias -p ./tsconfig.json",
    "build": "npm run routes && prisma generate && npm run compile",
    "vercel-build": "prisma generate",
    "migrate:local": ". ./env.local.sh && npx prisma migrate dev && prisma generate",
    "migrate:prod": ". ./env.prod.sh && npx prisma migrate deploy && prisma generate",
    "ready:local": "docker-compose -f ./local.yml -p slidtodo-local up -d",
    "start:local": ". ./env.local.sh && npm run ready:local && prisma generate && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "start:prod": ". ./env.prod.sh && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.458.0",
    "@prisma/client": "^5.6.0",
    "@tsoa/runtime": "5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
    "inversify": "^6.0.2",
    "inversify-binding-decorators": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.3",
    "multer-s3": "^3.0.1",
    "patch-package": "^8.0.0",
    "swagger-ui-express": "^4.3.0",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@tsoa/cli": "5.1.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^20.9.4",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "prisma": {
    "schema": "./src/infrastructure/prisma/schema.prisma",
    "migrateOutput": "./src/infrastructure/prisma/migrations"
  }
}